{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "outDir": "dist",
        "skipLibCheck": true,
        "types": ["vitest/globals", "vitest"]
    },
    "exclude": [
        "**/*.test.ts",
        "**/*.testx.ts",
        "node_modules"
    ],
    "ts-node": {
        "esm": false,
        "experimentalSpecifierResolution": "node"
    }
}
